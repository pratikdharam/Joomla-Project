<?xml version="1.0" encoding="utf-8"?>
<form>
  <title>Testimonial Style 1</title>
	<sampledata></sampledata>
	<fields name="testimonial-intro">
		<fieldset name="section-basic" label="TESTIMONIALS_BASIC_CONFIGURE_LABEL" description="TESTIMONIALS_BASIC_CONFIGURE_DESC">
			<field name="testimonial-media-alignment" type="list" default="left" label="TESTIMONIALS_MEDIA_ALIGNMENT_LABEL" description="TESTIMONIALS_MEDIA_ALIGNMENT_DESC">
				<option value="">Left</option>
				<option value="reverse">Right</option>
			</field>
		</fieldset>

		<fieldset name="section-features" label="TESTIMONIALS_ITEM_CONFIGURE_LABEL" description="TESTIMONIALS_ITEM_CONFIGURE_DESC" multiple="1">
			<field name="testimonial-heading" type="textarea" default="" label="TESTIMONIALS_HEADING_LABEL" description="TESTIMONIALS_HEADING_DESC"/>
			<field name="testimonial-desc" type="textarea" default="" label="TESTIMONIALS_DESC_LABEL" description="TESTIMONIALS_DESC_DESC"/>
			<field name="testimonial-main-image" type="media" default="" label="TESTIMONIAL_MAIN_IMAGE_LABEL" description="TESTIMONIAL__MAIN_IMAGE_DESC"  />			
			<field name="testimonial-media-fitsize" type="list" default="auto" label="TESTIMONIALS_MEDIA_FITSIZE_LABEL" description="TESTIMONIALS_MEDIA_FITSIZE_DESC">
				<option value="auto">Auto</option>
				<option value="contain">Contain</option>
				<option value="cover">Cover</option>
				<option value="Inherit">Inherit</option>
			</field>
			<field name="testimonial-content-alignment" type="list" default="left" label="TESTIMONIALS_CONTENT_ALIGN_LABEL" description="TESTIMONIALS_CONTENT_ALIGN_DESC">
				<option value="left">Left</option>
				<option value="center">Center</option>
			</field>
			<field name="author-name" type="text" default="" label="AUTHOR_NAME_LABEL" description="AUTHOR_NAME_DESC" required="1"/>
			<field name="author-position" type="text" default="" label="AUTHOR_POSITION_LABEL" description="AUTHOR_POSITION_DESC" />
			<field name="author-image" type="media" default="" size="40" label="AUTHOR_IMAGE_LABEL" description="AUTHOR_IMAGE_DESC" required="1" />
		</fieldset>
		
  </fields>
</form>