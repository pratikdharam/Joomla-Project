<?xml version="1.0" encoding="utf-8"?>
<form>
	<title>Gallery Style 2</title>
	<sampledata></sampledata>
	<fields name="basic">
		<fieldset name="col" label="GALLERY_BASIC_LABEL" description="GALLERY_BASIC_DESC" >      
			<field name="number-cols" type="list" label="GALLERY_NUMBER_COL_LABEL" description="GALLERY_NUMBER_COL_DESC">
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
				<option value="6">6</option>
			</field>
			<field name="gutter-size" type="list" label="GALLERY_GUTTER_SIZE_LABEL" description="GALLERY_GUTTER_SIZE_DESC">
				<option value="g-1">Small</option>
				<option value="g-2">Normal</option>
				<option value="g-3">Medium</option>
				<option value="g-3 g-xl-4">Large</option>
				<option value="g-3 g-xl-5">Extra Large</option>
			</field>
			<field name="content-alignment" detault="text-left" type="list" label="GALLERY_CONTENT_ALIGNMENT_LABEL" description="GALLERY_CONTENT_ALIGNMENT_DESC">
				<option value="text-left">Align left</option>
				<option value="text-center">Align center</option>
				<option value="text-right">Align right</option>
			</field>
		</fieldset>
		
		<fieldset name="gallery" label="GALLERY_ITEM_LABEL" description="GALLERY_ITEM_DESC" multiple="1">
			<field name="item-desktop-image" type="media" default="" label="GALLERY_ITEM_DESKTOP_IMAGE_LABEL" description="GALLERY_ITEM_DESKTOP_IMAGE_DESC"></field>
			<field name="item-mobile-image" type="media" default="" label="GALLERY_ITEM_MOBILE_IMAGE_LABEL" 				description="GALLERY_ITEM_MOBILE_IMAGE_DESC"></field>
			<field name="item-title" type="text" default="" label="GALLERY_TITLE_LABEL" description="GALLERY_TITLE_DESC"></field>
			<field name="item-desc" type="text" default="" label="GALLERY_ITEM_DESC_LABEL" description="GALLERY_ITEM_DESC_DESC"></field>
			<field name="item-link" type="text" default="" label="GALLERY_ITEM_LINK_LABEL" description="GALLERY_ITEM_LINK_DESC"></field>
		</fieldset>
	</fields>
</form>