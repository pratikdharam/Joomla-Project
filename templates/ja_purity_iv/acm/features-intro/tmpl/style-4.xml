<?xml version="1.0" encoding="utf-8"?>
<form>
  <title>Features Intro Style 2</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="content-alignment" type="list" label="MOD_HEADING_ALIGNMENT_LABEL" description="MOD_HEADING_ALIGNMENT_DESC" >
				<option value="text-start">left</option>
				<option value="text-center">center</option>
				<option value="text-end">right</option>
			</field>
			<field name="features-columns" type="list" label="FEATURES_COLUMNS_LABEL" description="FEATURES_COLUMNS_DESC" >
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
			</field>

			<field name="autoplay" type="list" default="true" label="HERO_AUTOPLAY_TITLE" description="HERO_AUTOPLAY_DES">
				<option value="true">JYES</option>
				<option value="false">JNO</option>
			</field>

			<field name="auto-time" type="text" default="5000" label="HERO_AUTOPLAY_TIME_TITLE" description="HERO_AUTOPLAY_TIME_DESC"></field>
		</fieldset>

		<fieldset name="section-features" label="FEATURE_SECTION_LABEL" description="FEATURE_SECTION_LABEL_DESC" multiple="1">
			<field name="feature-img" type="media" default="" label="FEATURE_IMAGE_LABEL" description="FEATURE_IMAGE_DESC" />
			<field name="feature-title" type="text" default="" label="FEATURE_HEADING_LABEL" description="FEATURE_HEADING_DESC" />
			<field name="feature-desc" type="textarea" default="" label="FEATURE_DESC_LABEL" description="FEATURE_DESC_DESC" />
			<field name="btn-text" type="text" default="" label="FEATURE_BTN_TEXT_LABEL" description="FEATURE_BTN_TEXT_DESC"/>
				<field name="btn-link" type="text" default="" label="FEATURE_BTN_LINK_LABEL" description="FEATURE_BTN_LINK_DESC"/>
				<field name="btn-type" type="list" default="" label="FEATURE_BTN_TYPE_LABEL" description="FEATURE_BTN_TYPE_DESC">
					<option value="btn-primary">Primary</option>
					<option value="btn-secondary">Secondary</option>
					<option value="btn-success">Success</option>
					<option value="btn-light">Light</option>
					<option value="btn-outline-light">Outline Light</option>
					<option value="btn-dark">Dark</option>
					<option value="btn-outline-dark">Outline Dark</option>
				</field>
		</fieldset>
  </fields>
</form>