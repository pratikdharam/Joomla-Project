<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 7</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="features-basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
      		<field name="bg-section" type="list" default="primary" label="FEATURES_BACKGROUND_SECTION_LABEL" description="FEATURES_BACKGROUND_SECTION_DESC" >
				<option value="bg-white">White</option>
				<option value="bg-primary">Primary</option>
				<option value="bg-secondary">Secondary</option>
				<option value="bg-success">Success</option>
				<option value="bg-info">Info</option>
				<option value="bg-purple">Purple</option>
				<option value="bg-dark">Dark</option>
			</field>

			<field name="columns" type="list" label="FEATURES_COLUMNS_LABEL" description="FEATURES_COLUMNS_DESC" >
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
			</field>
		</fieldset>

		<fieldset name="section-features" label="FEATURES_SECTION_LABEL_LABEL" description="FEATURES_SECTION_LABEL_DESC">
			<field name="data" type="jalist" >
				<item name="image" type="media" default="" label="FEATURES_IMAGE_LABEL" description="FEATURES_IMAGE_DESC" />
				<item name="title" type="text" default="" label="FEATURES_TITLE_LABEL" description="FEATURES_TITLE_DESC" />
				<item name="desc-info" type="textarea" default="" label="FEATURES_DESC_INFO_LABEL" description="FEATURES_DESC_INFO_DESC" />
			</field>
		</fieldset>
  </fields>
</form>