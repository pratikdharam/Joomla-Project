<?xml version="1.0" encoding="utf-8"?>
<form>
    <title>Features Intro Style 2</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="columns" type="list" label="FEATURES_COLUMNS_LABEL" description="FEATURES_COLUMNS_DESC" >
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
			</field>

			<field name="align" type="list" default="left" label="FEATURES_ALIGN_LABEL" description="FEATURES_ALIGN_DESC" >
				<option value="left">Left</option>
				<option value="center">Center</option>
			</field>
		</fieldset>
			
		<fieldset name="section-features" label="FEATURES_SECTION_LABEL" description="FEATURES_SECTION_DESC" multiple="1">
			<field name="intro-img" type="media" default="" label="FEATURES_INTRO_MEDIA_LABEL" description="FEATURES_INTRO_MEDIA_DESC" />
			
			<field name="bg-content" type="list" default="default" label="FEATURES_BACKGROUND_CONTENT_LABEL" description="FEATURES_BACKGROUND_CONTENT_DESC" >
				<option value="default">Default</option>
				<option value="primary">Primary</option>
				<option value="secondary">Secondary</option>
				<option value="light">Light</option>
				<option value="info">Info</option>
				<option value="purple">Purple</option>
				<option value="dark">Dark</option>
			</field>

			<field name="title" type="text" default="" size="40" label="FEATURES_TITLE_LABEL" description="FEATURES_TITLE_DESC" required="1" />
			<field name="sub-title" type="text" default="" label="FEATURES_SUB_TITLE_LABEL" description="FEATURES_SUB_TITLE_DESC" rows="5" cols="40" />

			<field name="info-left" type="textarea" default="" label="FEATURES_INFOLEFT_LABEL" description="FEATURES_INFOLEFT_DESC" rows="5" cols="40" />

			<field name="info-right" type="textarea" default="" label="FEATURES_INFORIGHT_LABEL" description="FEATURES_INFORIGHT_DESC" rows="5" cols="40" />

			<field name="button" type="text" default="" label="FEATURES_BUTTON" description="FEATURES_BUTTON_DES"/>
			<field name="btn-link" type="text" default="" label="FEATURES_BUTTON_LINK" description="FEATURES_BUTTON_LINK_DES"/>
			<field name="btn-type" type="list" default="" label="FEATURES_BUTTON_TYPE" description="FEATURES_BUTTON_TYPE_DES">
				<option value="primary">Primary</option>
				<option value="secondary">Secondary</option>
				<option value="success">Success</option>
				<option value="light">Light</option>
				<option value="outline-light">Outline Light</option>
				<option value="dark">Dark</option>
				<option value="outline-dark">Outline Dark</option>
			</field>

		</fieldset>
		
  </fields>
</form>