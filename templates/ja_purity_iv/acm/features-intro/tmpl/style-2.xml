<?xml version="1.0" encoding="utf-8"?>
<form>
  <title>Features Intro Style 2</title>
	<sampledata></sampledata>
	<fields name="features-intro">
		<fieldset name="basic" label="FEATURES_BASIC_LABEL" description="FEATURES_BASIC_DESC">
			<field name="features-columns" type="list" label="FEATURES_COLUMNS_LABEL" description="FEATURES_COLUMNS_DESC" >
				<option value="1">1</option>
				<option value="2">2</option>
				<option value="3">3</option>
				<option value="4">4</option>
			</field>
			<field name="features-style" type="list" label="FEATURES_STYLE_LABEL" description="FEATURES_STYLE_DESC" >
				<option value="no-border">no-border</option>
				<option value="border">border</option>
			</field>
			<field name="features-bg" type="list" label="FEATURES_BACKGROUND_LABEL" description="FEATURES_BACKGROUND_DESC" >
				<option value="bg-default">Body Background</option>
				<option value="bg-white">White</option>
				<option value="bg-light">Gray Light</option>
				<option value="bg-dark">Dark</option>
				<option value="bg-secondary">Secondary</option>
				<option value="bg-primary">Primary</option>
				<option value="bg-info">Info</option>
				<option value="bg-success">Success</option>
				<option value="bg-warning">Warning</option>
				<option value="bg-danger">Danger</option>
			</field>
			<field name="media-alignment" type="list" label="FEATURES_MEDIA_ALIGNMENT_LABEL" description="FEATURES_MEDIA_ALIGNMENT_DESC" >
				<option value="left">Left</option>
				<option value="top-left">Top Left</option>
				<option value="top-center">Top Center</option>
				<option value="top-right">Top Right</option>
				<option value="right">Right</option>
			</field>
			<field name="media-size" type="text" default="" label="FEATURE_MEDIA_MAX_SIZE_LABEL" description="FEATURE_MEDIA_MAX_SIZE_DESC" />
		</fieldset>

		<fieldset name="section-features" label="FEATURE_ITEM_OPTIONS_LABEL" description="FEATURE_ITEM_OPTIONS_DESC" multiple="1">
			<field name="feature-img" type="media" default="" label="FEATURE_IMAGE_LABEL" description="FEATURE_IMAGE_DESC" />
			<field name="feature-text" type="text" default="20+" label="FEATURE_TEXT_LABEL" description="FEATURE_TEXT_DESC" />
			<field name="feature-title" type="text" default="" label="FEATURE_HEADING_LABEL" description="FEATURE_HEADING_DESC" />
			<field name="feature-desc" type="textarea" default="" label="FEATURE_DESC_LABEL" description="FEATURE_DESC_DESC" />
		</fieldset>
  </fields>
</form>